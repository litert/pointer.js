{
    "name": "@litert/pointer",
    "version": "1.0.0",
    "description": "A lightweight pointer event library for handling mouse and touch interactions in browsers.",
    "type": "module",
    "keywords": [
        "pointer",
        "mouse",
        "touch",
        "drag",
        "resize",
        "gesture",
        "event",
        "web",
        "browser"
    ],
    "main": "./dist/index.umd.js",
    "module": "./dist/index.esm.js",
    "types": "./dist/src/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.esm.js",
            "require": "./dist/index.umd.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "npx ts-node --esm scripts/build.ts",
        "prepublishOnly": "npm run build"
    },
    "author": "MAIYUYN.NET",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/litert/pointer.js.git"
    },
    "bugs": {
        "url": "https://github.com/litert/pointer.js/issues"
    },
    "homepage": "https://github.com/litert/pointer.js#readme",
    "devDependencies": {
        "@litert/eslint-plugin-rules": "^0.3.1",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.2",
        "rollup": "^4.53.3",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3"
    }
}
